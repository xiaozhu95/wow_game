{extend name="template/base" /}
{block name="content"}
<div class="page-container">
    
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="l">
            {tp:menu menu="add,forbid,resume,saveOrder" /}
        </span>
        <span class="r pt-5 pr-5">
            共有数据 ：<strong>{$count ?? '0'}</strong> 条
        </span>
    </div>
    <table class="table table-border table-bordered table-hover table-bg mt-20">
        <thead>
        <tr class="text-c">
            <th width="25"><input type="checkbox"></th>
            <th width="">ID</th>
            <th width="">模块</th>
            <th width="">控制器</th>
            <th width="">操作</th>
            <th width="">开始时间</th>
            <th width="">下次运行时间</th>
            <th width="">间隔时间</th>
            <th width="">参数</th>
<th width="">{:sort_by('排序','sort')}</th>
<th width="">状态</th>
<th width="70">操作</th>
        </tr>
        </thead>
        <tbody>
        {volist name="list" id="vo"}
        <tr class="text-c">
            <td><input type="checkbox" name="id[]" value="{$vo.id}"></td>
            <td>{$vo.id}</td>
            <td>{$vo.module}</td>
            <td>{$vo.controller}</td>
            <td>{$vo.action}</td>
            <td>{$vo.start_time}</td>
            <td>{$vo.next_time}</td>
            <td>{$vo.interval_time}</td>
            <td>{$vo.data}</td>
            <td style="padding: 0">
    <input type="number" name="sort[{$vo.id}]" value="{$vo.sort}" style="width: 60px;"
        class="input-text text-c order-input" data-id="{$vo.id}"></td>
        <td>{$vo.status|get_status}</td>
        <td class="f-14">
                {$vo.status|show_status=$vo.id}
                {tp:menu menu='sedit' /}
                {tp:menu menu='sdeleteforever' /}
            </td>
        </tr>
        {/volist}
        </tbody>
    </table>
    <div class="page-bootstrap">{$page ?? ''}</div>
</div>
{/block}

